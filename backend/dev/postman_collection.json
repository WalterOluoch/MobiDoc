          "name": "Approve Doctor",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"action\": \"approve\",\n  \"reviewNotes\": \"Documents verified\"\n}"
            },
            "url": {
              "raw": "http://localhost:5000/api/admin/doctors/:id",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "admin", "doctors", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "DOCTOR_ID_HERE"
                }
              ]
            }
          }
        }
